<%= form_with url: login_path do |form| %>
    <div class="field">
      <%= form.label :email %>
      <%= form.email_field :email, required: true %>
    </div>

    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password, required: true %>
    </div>

    <div class="actions">
      <%= form.submit "Sign In" %>
    </div>
<% end %>
