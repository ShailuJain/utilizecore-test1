<p id="notice"><%= notice %></p>

<h1>Search Order Status</h1>

<%= form_with(url: search_path, method: 'get', local: true) do %>
  <%= text_field_tag(:search, nil, placeholder: 'Enter order ID', id: 'search', required: true) %>
  <%= submit_tag("Search") %>
<% end %>

<br /><br />
<% if @parcels.present? %>
  <table>
    <thead>
    <tr>
      <th>ID</th>
      <th>Status</th>
    </tr>
    </thead>

    <tbody>
    <% @parcels.each do |parcel| %>
      <tr>
        <td><%= parcel.tracking_id %></td>
        <td><%= parcel.status %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <h3>No parcel found with given tracking id</h3>
<% end %>